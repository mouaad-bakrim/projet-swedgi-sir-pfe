{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <div class="card borderless-card">
        <div class="card-block primary-breadcrumb">
            <div class="breadcrumb-header">
                <h5>Create Service</h5>
            </div>
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_home') }}">
                            <i class="icofont icofont-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item"><a href="#!">Service</a>
                    </li>
                    <li class="breadcrumb-item"><a href="#!">Create Service</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>


    <div class="card">
        <div class="card-header">

            <!-- Main content -->
            <section class="content">

                <!-- Default box -->
                <div class="box">

                    <section class="content">

                        <div class="row">
                            <div class="form-group col-sm-2">
                                <label class="control-label" for="client">mission :</label>
                            </div>
                            <div class="col-sm-10">
                                <p>{{ form_widget(form.mission, {'attr': {'class': 'form-control',  'placeholder':'mission'}}) }}</p>
                            </div>

                            <div class="form-group col-sm-2">
                                <label class="control-label" for="client">designation :</label>
                            </div>
                            <div class="col-sm-10">
                                <p>{{ form_widget(form.designation, {'attr': {'class': 'form-control',  'placeholder':'designation'}}) }}</p>
                            </div>


                            <div class="form-group col-sm-2">
                                <label class="control-label" for="client">date :</label>
                            </div>
                            <div class="form-group col-sm-10">
                                {{ form_widget(form.date, { 'attr': {'class': 'form-control no-resize datetimepicker', 'placeholder': 'Sélectionnez une date', 'value': 'now'|date('d')} }) }}
                            </div>
                            <div class="form-group col-sm-2">
                                <label class="control-label" for="client">Duree :</label>
                            </div>
                            <div class="form-group col-sm-10">
                                {{ form_widget(form.duree, { 'attr': {'class': 'form-control no-resize datetimepicker', 'placeholder': 'Sélectionnez une duree'} }) }}
                            </div>
                            <div class="form-group col-sm-2">
                                <label class="control-label" for="client">Description :</label>
                            </div>
                            <div class="col-sm-10">
                                <p>{{ form_widget(form.description, {'attr': {'class': 'form-control',  'placeholder':'description'}}) }}</p>
                            </div>

                            <div class="form-group col-sm-2">
                                <label class="control-label" for="client">Collaborator :</label>
                            </div>
                            <div class="col-sm-10">
                                <p>{{ form_widget(form.user, {'attr': {'class': 'form-control',  'placeholder':'user'}}) }}</p>
                            </div>


                            <div class="form-group col-sm-12">
                                <button type="submit" class="btn btn-primary">Valider</button>
                            </div>
                        </div>
                    </section>
                </div>
            </section>
        </div>
    </div>
    </div>

    {{ form_end(form) }}
{% endblock %}
