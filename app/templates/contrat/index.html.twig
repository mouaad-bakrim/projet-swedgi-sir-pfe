{% extends 'base.html.twig' %}

{% block title %}contrat{% endblock %}

{% block body %}

    <div class="card borderless-card">
        <div class="card-block primary-breadcrumb">
            <div class="breadcrumb-header">
                <h5>Contrat</h5>
            </div>
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_home') }}">
                            <i class="icofont icofont-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item"><a href="#!">Contrat</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">



            <div class="box-body" style="padding-bottom:10px">
                <a  href="{{ path('contrat_add') }}" class="btn hor-grd btn-grd-success "><i class="fa fa-user-plus"></i>Add Contrat</a>
                <a class="fa fa-trash-o btn hor-grd btn-grd-danger "> Delete </a>
            </div>

                    <div class="box-footer">
                        {% for flash_message in app.session.flashbag.get('success') %}
                            <div class="alert alert-dismissible alert-info">
                                <button type="button" class="close" data-dismiss="alert">x</button>
                                <strong><i class="fa fa-check"></i></strong> {{ flash_message|trans }}
                            </div>
                        {% endfor %}
                        <div class="table-responsive">
                            <table id="example" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                <tr class="table-primary">
                                    <th>id</th>
                                    <th style="text-align:center">Date Debut</th>
                                    <th  style="text-align:center">Client</th>
                                    <th  style="text-align:center">Service</th>
                                    <th  style="text-align:center">montant</th>
                                    <th  style="text-align:center">actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for contrat in contrats %}
                                    <tr align="center">
                                        <td>{{ contrat.id }}</td>
                                        <td>{{ contrat.date | date('d/m/Y') }}</td>
                                        <td>{{ contrat.client }}</td>
                                        <td>{{ contrat.service }}</td>
                                        <td>{{ contrat.montant }}</td>
                                        <td class="d-flex justify-content-between align-items-center" style="padding:3px">
                                            <a href="" type="button" class="btn btn-primary btn-icon waves-effect waves-light" data-toggle="tooltip" data-placement="top" title="Show">
                                                <i class="fa fa-eye" style="margin-left:6px"></i>
                                            </a>

                                            <a href="{{ path('contrat_add',{id: contrat.id}) }}" type="button" class="btn btn-warning btn-icon waves-effect waves-light" data-toggle="tooltip" data-placement="top" title="Edit">
                                                <i class="ti-pencil" style="margin-left:6px"></i>
                                            </a>

                                            <a href="{{ path('contrat_delete',{id: contrat.id}) }}" type="button" class="btn btn-danger btn-icon waves-effect waves-light" data-toggle="tooltip" data-placement="top" title="Delete">
                                                <i class="fa fa-trash-o" style="margin-left:6px"></i>
                                            </a>

                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div><!-- /.box -->
            </section><!-- /.content -->
        </div>
    </div>

{% endblock %}
