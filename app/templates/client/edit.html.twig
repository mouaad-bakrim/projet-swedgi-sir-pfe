{% extends 'base.html.twig' %}
{% block title %}mettre a jour la client{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <div class="card borderless-card">
        <div class="card-block primary-breadcrumb">
            <div class="breadcrumb-header">
                <h5>Edite Client</h5>
            </div>
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_home') }}">
                            <i class="icofont icofont-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item"><a href="#!">Client</a>
                    </li>
                    <li class="breadcrumb-item"><a href="#!">Edite Client</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>


    <section class="content">
            <div class="box">

                <section class="content">

                    <div class="row">
                        <!-- left column -->
                        <div class="col-md-12">
                            <div class="card card-primary">

                                <div class="card-body ">
                                    <div class="row">
                                        <div class="form-group col-md-6">

                                            {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder':'nom'}}) }}
                                        </div>
                                        <div class="form-group col-md-6">
                                            {{ form_widget(form.prenom, {'attr': {'class': 'form-control',  'placeholder':'prenom'}}) }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-md-3">
                                            <div class="input-group-prepend">

                                            </div>
                                            {{ form_widget(form.email, {'attr': {'class': 'form-control',  'placeholder':'Email'}}) }}
                                        </div>

                                        <div class="form-group col-md-3">
                                            <div class="input-group-prepend">

                                            </div>
                                            {{ form_widget(form.telMobile, {'attr': {'class': 'form-control',  'placeholder':'Tel-Mobile'}}) }}
                                        </div>

                                        <div class="form-group col-md-3">
                                            <div class="input-group-prepend">

                                            </div>
                                            {{ form_widget(form.telBureau, {'attr': {'class': 'form-control',  'placeholder':'Tel-Bureau'}}) }}
                                        </div>
                                        <div class="form-group col-md-3">
                                            <div class="input-group-prepend">
                                            </div>
                                            {{ form_widget(form.fax, {'attr': {'class': 'form-control',  'placeholder':'Fax'}}) }}
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="form-group col-md-3">
                                            {{ form_widget(form.adresse, {'attr': {'class': 'form-control',  'placeholder':'Adresse'}}) }}
                                        </div>
                                        <div class="form-group col-md-3">
                                            {{ form_widget(form.ville, {'attr': {'class': 'form-control',  'placeholder':'Ville'}}) }}


                                        </div>
                                        <div class="form-group col-md-3">
                                            {{ form_widget(form.pays, {'attr': {'class': 'form-control',  'placeholder':'Pays'}}) }}

                                        </div>
                                        <div class="form-group col-md-3">
                                            {{ form_widget(form.codePostal, {'attr': {'class': 'form-control',  'placeholder':'Code Postal'}}) }}


                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="form-group col-md-2">
                                            {{ form_widget(form.rc, {'attr': {'class': 'form-control',  'placeholder':'Rc'}}) }}


                                        </div>
                                        <div class="form-group col-md-2">
                                            {{ form_widget(form.identicicationFiscale, {'attr': {'class': 'form-control',  'placeholder':'IF'}}) }}


                                        </div>
                                        <div class="form-group col-md-2">
                                            {{ form_widget(form.ice, {'attr': {'class': 'form-control',  'placeholder':'ICE'}}) }}


                                        </div>
                                        <div class="form-group col-md-2">
                                            {{ form_widget(form.cnss, {'attr': {'class': 'form-control',  'placeholder':'CNSS'}}) }}

                                        </div>
                                        <div class="form-group col-md-2">
                                            {{ form_widget(form.capital, {'attr': {'class': 'form-control', 'placeholder':'capital'}}) }}


                                        </div>
                                        <div class="form-group col-md-2">
                                            {{ form_widget(form.patente, {'attr': {'class': 'form-control', 'placeholder':'patente'}}) }}

                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-md-4">
                                            {{ form_widget(form.societe, {'attr': {'class': 'form-control', 'placeholder':'Societe'}}) }}

                                        </div>
                                        <div class="form-group col-md-4">
                                            {{ form_widget(form.nomSociete, {'attr': {'class': 'form-control', 'placeholder':'Nom de Societe'}}) }}

                                        </div>
                                        <div class="form-group col-md-4">
                                            {{ form_widget(form.siteWeb, {'attr': {'class': 'form-control', 'placeholder':'Site Web'}}) }}

                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-md-4">

                                            <input type="text" class="form-control" id="exampleInputEmail1"
                                                   placeholder="Groupe">
                                        </div>
                                        <div class="form-group col-md-4">
                                            {{ form_widget(form.Categorie, {'attr': {'class': 'form-control', 'placeholder':'Categorie'}}) }}


                                        </div>
                                        <div class="form-group col-md-4">
                                            {{ form_widget(form.type, {'attr': {'class': 'form-control', 'placeholder':'Type'}}) }}


                                            <!--     <select class="form-control" placeholder="Type">
                                                     <option>Aucan</option>
                                                     <option>California</option>
                                                     <option>Delaware</option>
                                                     <option>Tennessee</option>
                                                 </select>-->
                                        </div>
                                    </div>

                                </div>

                                <div class="card-footer col-sm-4 text-center">
                                    <button type="submit"  class="btn btn-success">
                                        <i class="fa fa-refresh fa-spin fa-fw" aria-hidden="true"></i>
                                        Update</button>
                                </div>


                            </div>


                        </div>


                    </div>


                </section>


            </div>
        </section>
    </div>
    {{ form_end(form) }}
{% endblock %}
