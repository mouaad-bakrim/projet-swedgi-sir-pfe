{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    <div class="card borderless-card">
        <div class="card-block primary-breadcrumb">
            <div class="breadcrumb-header">
                <h5>Show Collaborateur</h5>
            </div>
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_home') }}">
                            <i class="icofont icofont-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item"><a href="#!">Collaaborateur</a>
                    </li>
                    <li class="breadcrumb-item"><a href="#!">Show Collaborateur</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
<div class="card">
    <div class="card-header">
    {{ form_start(registrationForm) }}


    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="box">
            <section class="content">

                <div class="row">

                    <label class="control-label col-sm-2" for="">username :</label>
                    <div class="col-sm-10">
                        <p>{{ form_widget(registrationForm.username, {'attr': {'class': 'form-control',  'placeholder':'username'}}) }}</p>
                    </div>

                    <label class="control-label col-sm-2" for=""> roles :</label>
                    <div class="col-sm-10">
                        <p> {{ form_widget(registrationForm.roles, {'attr': {'class': 'form-control',  'placeholder':'roles'}}) }}</p>
                    </div>

                    <label class="control-label col-md-2" for="">email :</label>
                    <div class="col-md-10">
                        <p>{{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder':'email'}}) }}</p>
                    </div>

                    <label class="control-label col-md-2" for="">Password :</label>
                    <div class="col-md-10">
                        <p>{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder':'password'}}) }}</p>
                    </div>


                        <button type="submit"  class="btn btn-success">
                            <i class="fa fa-refresh fa-spin fa-fw" aria-hidden="true"></i>
                            Update</button>

                </div>
            </section>
        </div>
    </section>
    </div>
    </div>
    </div>

    {{ form_end(registrationForm) }}
{% endblock %}
