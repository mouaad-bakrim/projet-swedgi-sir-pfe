{% extends 'base.html.twig' %}
{% block title %}show collaborators{% endblock %}

{% block body %}
    <div class="card borderless-card">
        <div class="card-block primary-breadcrumb">
            <div class="breadcrumb-header">
                <h5>Show Collaborateur</h5>
            </div>
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_home') }}">
                            <i class="icofont icofont-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item"><a href="#!">Collaaborateur</a>
                    </li>
                    <li class="breadcrumb-item"><a href="#!">Show Collaborateur</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>


    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="box">


            <div class="box-body">


                <div class="box-header with-border">
                    <a href="{{ path('user_edit',{id: user.id}) }}" class="btn btn-sm btn-primary btn-sm">
                        Edite Categorie
                        <span class="fa fa-pencil-square-o" aria-hidden="true"></span>
                    </a>


                    <a href="{{ path('register_delete',{id: user.id}) }}" class="btn btn-danger btn-sm">
                        Delete
                        <span class="fa fa-trash-o" aria-hidden="true"></span>

                    </a>


                    <div class="pull-right">
                        <a href="{{ path('index_app') }}" class="btn btn-sm btn-warning btn-sm">
                            <i class="fa fa-reply" aria-hidden="true"></i>
                            Reteurn
                        </a>
                    </div>


                </div>
                <div class="card">
                    <div class="card-header">
                <section class="content">

                    <div class="row">
                        <label class="col-sm-2 col-form-label">Username :</label>
                        <div class="col-sm-10">

                            <p><input type='text' class="form-control" disabled="disabled"
                                      placeholder="{{ user.username }}"></p>

                        </div>


                        <label class="control-label col-sm-2" for="">roles :</label>
                        <div class="col-sm-10">
                            <p> <input type='text' class="form-control" disabled="disabled"
                                       placeholder="{{ user.roles ? user.roles|json_encode : '' }}"></p>
                        </div>
                        <label class="control-label col-sm-2" for=""> email :</label>
                        <div class="col-sm-10">
                            <p> <input type='text' class="form-control" disabled="disabled"
                                       placeholder="{{ user.email }}"></p>
                        </div>
                        <label class="control-label col-sm-2" for=""> password :</label>
                        <div class="col-sm-10">
                            <p> <input type='text' class="form-control" disabled="disabled"
                                       placeholder="{{ user.password }}"></p>
                        </div>

                    </div>
                </section>


            </div>
            </div>
            </div>
        </div>
    </section>




    </div>


{% endblock %}
