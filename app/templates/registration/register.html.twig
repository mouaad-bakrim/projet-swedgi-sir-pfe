


{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    <div class="card borderless-card">
        <div class="card-block primary-breadcrumb">
            <div class="breadcrumb-header">
                <h5>Create Collaborateur</h5>
            </div>
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_home') }}">
                            <i class="icofont icofont-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item"><a href="#!">Collaaborateur</a>
                    </li>
                    <li class="breadcrumb-item"><a href="#!">Create Collaborateur</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>




    {{ form_start(registrationForm) }}
    <div class="card">

        <div class="card-block">
            <form id="main" method="post" action="/" novalidate="">
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Username :</label>
                    <div class="col-sm-10">
                       <p>{{ form_widget(registrationForm.username, {'attr': {'class': 'form-control', 'placeholder':'username'}}) }}</p>
                        <span class="messages"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Role :</label>
                    <div class="col-sm-10">

                            <p>{{ form_widget(registrationForm.roles, {'attr': {'class': 'form-control', 'placeholder':'roles'}}) }}</p>

                        <span class="messages"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Email :</label>
                    <div class="col-sm-10">

                        <p > {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder':'email'}}) }}</p>

                        <span class="messages"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Password :</label>
                    <div class="col-sm-10">

                        <p>{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control',  'placeholder':'plainPassword'}}) }}</p>

                        <span class="messages"></span>
                    </div>
                </div>

                {{ form_end(registrationForm) }}
                <div class="form-group row">
                    <label class="col-sm-2"></label>
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary m-b-0">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>


        <!-- Main content -->

    </div>



{% endblock %}
