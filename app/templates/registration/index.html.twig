{% extends 'base.html.twig' %}

{% block title %}Users List{% endblock %}

{% block body %}

    <div class="card borderless-card">
        <div class="card-block primary-breadcrumb">
            <div class="breadcrumb-header">
                <h5>Employer</h5>
            </div>
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_home') }}">
                            <i class="icofont icofont-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item"><a href="#">Collaborateur</a>
                    </li>

                </ul>
            </div>
        </div>
    </div>





    <div class="card">
        <div class="card-header">


                <div class="box-body" style="padding-bottom:10px">
                    <a  href="{{ path('app_register') }}" class="btn hor-grd btn-grd-success "><i class="fa fa-user-plus"></i>Add Collaborateur</a>
                </div>

        <div class="box-footer">

            <div class="table-responsive">
                <table id="example" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                    <tr class="table-primary">

                        <th>id</th>
                        <th  style="text-align:center">Username</th>
                        <th  style="text-align:center">Email</th>
                        <th  style="text-align:center">Password</th>
                        <th  style="text-align:center">Roles</th>
                        <th  style="text-align:center">Action</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for register in registers %}
                        <tr align="center">
                            <td>{{ register.id }}</td>
                            <td>

                                {{ register.username }}</td>
                            <td>{{ register.email }}</td>
                            <td>**********</td>
                            <td>{{ register.roles ? register.roles|json_encode : '' }}
                            </td>


                            <td class="d-flex justify-content-between align-items-center" style="padding:3px">
                                <a href="{{ path('user_show',{id: register.id}) }}" type="button"
                                   class="btn btn-primary btn-icon waves-effect waves-light" data-toggle="tooltip"
                                   data-placement="top" title="Show">
                                    <i class="fa fa-eye" style="margin-left:6px"></i></a>
                                <a href="{{ path('user_edit',{id: register.id}) }}" type="button"
                                   class="btn btn-warning btn-icon waves-effect waves-light" data-toggle="tooltip"
                                   data-placement="top" title="Edite">
                                    <i class="ti-pencil" style="margin-left:6px"></i></a>
                                <a href="{{ path('client_delete',{id: register.id}) }}" type="button"
                                   class="btn btn-danger btn-icon waves-effect waves-light" data-toggle="tooltip"
                                   data-placement="top" title="Delete">
                                    <i class="fa fa-trash-o" style="margin-left:6px"></i></a>
                            </td>

                        </tr>
                    {% endfor %}


                    </tbody>
                </table>
            </div>

        </div>
    </div><!-- /.box -->





{% endblock %}
