{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <div class="card borderless-card">
        <div class="card-block primary-breadcrumb">
            <div class="breadcrumb-header">
                <h5>Show Client</h5>
            </div>
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_home') }}">
                            <i class="icofont icofont-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item"><a href="#!">Categorie</a>
                    </li>
                    <li class="breadcrumb-item"><a href="#!">Edite Categorie</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>



    <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="box">

                <section class="content">

                    <div class="row">
                        <label class="control-label col-md-2" for="">libellee :</label>
                        <div class="col-md-10">
                            <p>{{ form_widget(form.libellee, {'attr': {'class': 'form-control', 'placeholder':'libellee'}}) }}</p>
                        </div>

                        <label class="control-label col-sm-2" for="">description :</label>
                        <div class="col-sm-10">
                            <p>{{ form_widget(form.description, {'attr': {'class': 'form-control',  'placeholder':'description'}}) }}</p>
                        </div>

                        <label class="control-label col-sm-2" for=""> codeGroupe :</label>
                        <div class="col-sm-10">
                            <p> {{ form_widget(form.codeGroupe, {'attr': {'class': 'form-control',  'placeholder':'codeGroupe'}}) }}</p>
                        </div>


                            <button type="submit"  class="btn btn-success">
                                <i class="fa fa-refresh fa-spin fa-fw" aria-hidden="true"></i>
                                Update</button>

                    </div>
                </section>
            </div>
        </section>
    </div>

    {{ form_end(form) }}
{% endblock %}
