{% extends 'base.html.twig' %}

{% block title %}Categorie List{% endblock %}

{% block body %}
    <div class="card borderless-card">
        <div class="card-block primary-breadcrumb">
            <div class="breadcrumb-header">
                <h5>Categorie</h5>
            </div>
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_home') }}">
                            <i class="icofont icofont-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item"><a>Categorie</a>
                    </li>

                </ul>
            </div>
        </div>
    </div>





    <div class="card">

        <div class="card-header">


            <div class="box-body" style="padding-bottom:10px">
                <a  href="{{ path('categorie_store') }}" class="btn hor-grd btn-grd-success "><i class="fa fa-user-plus"></i>Add Categorie</a>
                <a class="fa fa-trash-o btn hor-grd btn-grd-danger "> Delete </a>
            </div>

            {% for flash_message in app.session.flashbag.get('success') %}
                <div class="col-xs-12 col-sm-6 col-sm-offset-3 pull-right">
                    <div class="alert alert-dismissible alert-danger">
                        <button type="button" class="close" data-dismiss="alert">x</button>
                        <strong><i class="fa fa-check"></i></strong> {{ flash_message|trans }}
                    </div>
                    <script>
                        // Automatically close the alert after 5 seconds
                        setTimeout(function() {
                            $(".alert").alert('close');
                        }, 2000);
                    </script>
                </div>
            {% endfor %}


            {% for flash_message in app.session.flashbag.get('delete') %}
                <div class="col-xs-6 col-sm-6 col-sm-offset-3 pull-right">
                    <div class="alert alert-dismissible alert-danger">
                        <button type="button" class="close" data-dismiss="alert">x</button>
                        <strong><i class="fa fa-check"></i></strong> {{ flash_message|trans }}
                    </div>
                    <script>
                        setTimeout(function() {
                            $(".alert").alert('close');
                        }, 2000);
                    </script>
                </div>
            {% endfor %}


                <div class="table-responsive">
                    <table id="example" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                        <tr class="table-primary">
                        <th>#</th>
                        <th>Id</th>
                        <th>Libelle</th>
                        <th>Description</th>
                        <th>Code groupe</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for categorie in categories %}
                        <tr align="center">
                            <td><input type="checkbox" name="categorie[]" value="{{ categorie.id }}"></td>
                            <td>{{ loop.index }}</td>
                            <td>{{ categorie.libellee }}</td>
                            <td>{{ categorie.description }}</td>
                            <td>{{ categorie.codeGroupe }}</td>
                            <td class="d-flex justify-content-between align-items-center" style="padding:3px">
                                <a href="{{ path('categorie_show',{id: categorie.id}) }}"  type="button" class="btn btn-primary btn-icon waves-effect waves-light" data-toggle="tooltip" data-placement="top" title="Show">
                                    <i class="fa fa-eye" style="margin-left:6px"></i></a>
                                <a href="{{ path('categorie_edit',{id: categorie.id}) }}"  type="button" class="btn btn-warning btn-icon waves-effect waves-light" data-toggle="tooltip" data-placement="top" title="Edite">
                                    <i  class="ti-pencil" style="margin-left:6px"></i></a>
                                <a href="{{ path('categorie_delete',{id: categorie.id}) }}"  type="button" class="btn btn-danger btn-icon waves-effect waves-light" data-toggle="tooltip" data-placement="top" title="Delete">
                                    <i class="fa fa-trash-o" style="margin-left:6px"></i></a>
                            </td>


                        </tr>
                    {% endfor %}
                    </tbody>
                    </thead>

                </table>
            </div>
        </div>
    </div>
    </div>











    </div>
    </div>
    </div>
    </div>
    </div>
    </div>



{% endblock %}
